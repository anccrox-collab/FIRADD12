# HerbionYX Backend Configuration
# Hyperledger Fabric Network Configuration

NODE_ENV=development
PORT=5000
DEMO_MODE=false

# JWT Configuration
JWT_SECRET=herbionyx_production_secret_2024

# IPFS Configuration (Pinata) - Get from https://pinata.cloud
# Sign up for free account and get API keys from dashboard
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_key_here

# SMS Configuration (Fast2SMS) - Get from https://fast2sms.com
# Sign up and get API key from dashboard
FAST2SMS_API_KEY=your_fast2sms_api_key_here

# Geolocation API (OpenCellID) - Get from https://opencellid.org
# Free tier: 1000 requests/day
OPENCELLID_API_KEY=your_opencellid_api_key_here

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info

# Hyperledger Fabric Network Configuration
FABRIC_CHANNEL_NAME=herbionyx-channel
FABRIC_CHAINCODE_NAME=herbionyx-chaincode
FABRIC_MSP_ID=Org1MSP
FABRIC_PEER_ENDPOINT=grpcs://localhost:7051
FABRIC_CA_ENDPOINT=https://localhost:7054
FABRIC_ORDERER_ENDPOINT=grpcs://localhost:7050